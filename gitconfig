[core]
	editor = vim
	excludesfile = /Users/tcurtis/.gitignore_global
[user]
	name = Tyler Curtis
	email = tjcurt@gmail.com
[color]
	ui = true
[push]
	default = simple
[diff]
	tool = intellij
[merge]
	tool = intellij
[mergetool "intellij"]
	cmd = '/Applications/IntelliJ IDEA CE.app/Contents/MacOS/idea' merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
	trustExitCode = true
[mergetool]
	keepBackup = false
[alias]
	st = status
	co = checkout
	ci = commit
	hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
	logdate = log --format=\"%h %cd %ae - %s\" --date=local
	llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
[credential]
	helper = osxkeychain
[auto]
	crlf = input
